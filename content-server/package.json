{
  "name": "weedify-content-server",
  "version": "1.2.0",
  "description": "RESTful APIs with Node.js, Express, and TypeScript",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "postbuild": "npm run apidoc",
    "lint": "eslint --fix src test",
    "test": "jest",
    "apidoc": "apidoc -i src/api/routes/ -o apidocs/",
    "jsdoc": "jsdoc -c jsdoc.json"
  },

  "apidoc": {
    "name": "Weedify Content API",
    "version": "1.0.0",
    "description": "REST API backend for Weedify content endpoints",
    "title": "Weedify Content API",
    "url": "http://localhost:3002/api/v1/content",
    "template": {
      "withCompare": true,
      "withGenerator": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "apidoc": "^1.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "fetch": "^1.1.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.12.0",
    "randomstring": "^1.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.5",
    "@types/randomstring": "^1.3.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "hybrid-types": "github:karripar/weedify-types",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1"
  }
}
